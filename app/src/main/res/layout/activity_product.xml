<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="br.com.ktek.stackbarcode.ProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/txtProdutoNome"
                    android:text="aaaaaaaaaaaa"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Estoque"
                    android:id="@+id/txtProdutoEstoqueLabel"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/txtProdutoEstoque"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PreÃ§o(R$)" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/txtProdutoPreco"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Qtde"
                    android:id="@+id/txtProdutoQtdeLabel" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/txtProdutoQtde"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Desconto(%)" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtProdutoDesconto"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="total(R$)" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtProdutoPrecoTotal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e0e0e0">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                android:minHeight="100dp"
                android:id="@+id/lvProdutoGradeLote"
                android:descendantFocusability="beforeDescendants"
                android:divider="#e0e0e0"/>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
